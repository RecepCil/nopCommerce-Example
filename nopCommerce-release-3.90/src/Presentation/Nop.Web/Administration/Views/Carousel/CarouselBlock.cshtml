@model IEnumerable<Nop.Admin.Models.Catalog.CarouselModel>

@{
    Layout = null;
}
<head>

    <!-- Google Fonts -->
    <link href='http://fonts.googleapis.com/css?family=Titillium+Web:400,200,300,700,600' rel='stylesheet' type='text/css'>
    <link href='http://fonts.googleapis.com/css?family=Roboto+Condensed:400,700,300' rel='stylesheet' type='text/css'>
    <link href='http://fonts.googleapis.com/css?family=Raleway:400,100' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" href="path/to/font-awesome/css/font-awesome.min.css">

    <!-- Bootstrap -->
    <link rel="stylesheet" href="http://localhost:15536/Content/carousel/css/bootstrap.min.css">

    <!-- Font Awesome -->
    <link rel="stylesheet" href="http://localhost:15536/Content/carousel/css/font-awesome.min.css">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="http://localhost:15536/Content/carousel/css/owl.carousel.css">
    <link rel="stylesheet" href="http://localhost:15536/Content/carousel/style.css">
    <link rel="stylesheet" href="http://localhost:15536/Content/carousel/css/responsive.css">

</head>
<body>
    <div class="slider-area">
        <!-- Slider -->
        <div class="block-slider block-slider4">
            <ul class="" id="bxslider-home4">
                @foreach (var item in Model)
                {
                    <li>
                        <a href="Admin\Carousel\Edit\@item.Id">
                            <img src="@item.Path" style="width:100%;float:left;">
                        </a>
                    </li>
                }

            </ul>
        </div>
        <!-- ./Slider -->
    </div> <!-- End slider area -->
    <!-- Latest jQuery form server -->
    <script src="https://code.jquery.com/jquery.min.js"></script>

    <!-- Bootstrap JS form CDN -->
    <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>

    <!-- jQuery sticky menu -->
    <script src="http://localhost:15536/Content/carousel/js/owl.carousel.min.js"></script>
    <script src="http://localhost:15536/Content/carousel/js/jquery.sticky.js"></script>
    <!-- jQuery easing -->
    <script src="http://localhost:15536/Content/carousel/js/jquery.easing.1.3.min.js"></script>

    <!-- Main Script -->
    <script src="http://localhost:15536/Content/carousel/js/main.js"></script>

    <!-- Slider -->
    <script type="text/javascript" src="http://localhost:15536/Content/carousel/js/bxslider.min.js"></script>
    <script type="text/javascript" src="http://localhost:15536/Content/carousel/js/script.slider.js"></script>
</body>