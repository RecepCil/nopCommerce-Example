                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <div class="col-md-3">
                                                    @Html.NopLabelFor(model => model.FinishDate)
                                                </div>
                                                <div class="col-md-9">
                                                    <input type="file" name="Image" value="" />
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
