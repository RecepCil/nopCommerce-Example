                                    <div class="panel-heading">
                                        <b>CAROUSEL</b>
                                    </div>
                                    <div class="panel-body">
                                        <div>
                                            <div class="form-group">
                                                <div class="col-md-3">
                                                    @Html.NopLabelFor(model => model.Link)
